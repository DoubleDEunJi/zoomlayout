<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="ZoomLayout">

        <Preference
            android:key="pref_main_singleimageview"
            android:title="Single ImageView">
            <intent
                android:targetPackage="com.shopgun.android.zoomlayout.sample"
                android:targetClass="com.shopgun.android.zoomlayout.sample.SingleImageViewActivity"/>
        </Preference>

        <Preference
            android:key="pref_main_doubleimageview"
            android:title="Double ImageView">
            <intent
                android:targetPackage="com.shopgun.android.zoomlayout.sample"
                android:targetClass="com.shopgun.android.zoomlayout.sample.DoubleImageViewActivity"/>
        </Preference>

        <Preference
            android:key="pref_main_viewpager"
            android:title="ViewPager">
            <intent
                android:targetPackage="com.shopgun.android.zoomlayout.sample"
                android:targetClass="com.shopgun.android.zoomlayout.sample.ViewPagerActivity"/>
        </Preference>

        <Preference
            android:key="pref_main_multipleview"
            android:title="Multiple Views">
            <intent
                android:targetPackage="com.shopgun.android.zoomlayout.sample"
                android:targetClass="com.shopgun.android.zoomlayout.sample.MultipleViewActivity"/>
        </Preference>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Issues">

        <Preference
            android:key="pref_main_multipleview"
            android:title="Child View Input ">
            <intent
                android:targetPackage="com.shopgun.android.zoomlayout.sample"
                android:targetClass="com.shopgun.android.zoomlayout.sample.ChildViewInputActivity"/>
        </Preference>

    </PreferenceCategory>

</PreferenceScreen>